<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" fx:controller="org.example.menubar.RateBookController">
    <Label text="Đánh giá sách"/>
    <TextField fx:id="ratingField" promptText="Nhập đánh giá (1-5)"/>
    <TextArea fx:id="commentField" promptText="Nhập nhận xét"/>
    <Button text="Gửi đánh giá" onAction="#handleSubmitRating"/>
</VBox>