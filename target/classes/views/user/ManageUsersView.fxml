<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.Button?>
<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="org.example.controller.ManageUsersController" alignment="CENTER" spacing="10">
    <Label text="Quản lý người dùng" style="-fx-font-size: 18; -fx-font-weight: bold;" />
    <TableView fx:id="userTableView">
        <columns>
            <TableColumn fx:id="idColumn" text="ID" />
            <TableColumn fx:id="nameColumn" text="Tên" />
            <TableColumn fx:id="ageColumn" text="Tuổi" />
            <TableColumn fx:id="emailColumn" text="Email" />
        </columns>
    </TableView>
    <Button text="Xóa người dùng" onAction="#handleDeleteUser" />
    <Button text="Đóng" onAction="#handleClose" />
</VBox>
