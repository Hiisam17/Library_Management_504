<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="MainController" prefWidth="1024" prefHeight="768">
   <top>
      <HBox spacing="10" style="-fx-padding: 10; -fx-alignment: center;">
         <Label text="Library Management" style="-fx-font-size: 24; -fx-font-weight: bold; -fx-halignment: center;"/>
         <HBox style="-fx-halignment: right; -fx-padding: 10; -fx-alignment: right;">
            <Button fx:id="closeButton" text="X" prefWidth="60" prefHeight="60" style="-fx-font-size: 24;"/>
         </HBox>
      </HBox>
   </top>
   <left>
      <VBox spacing="10" style="-fx-padding: 10; -fx-alignment: center;">
         <Button fx:id="addButton" text="Add Document" prefWidth="300" prefHeight="90" style="-fx-font-size: 20;"/>
         <Button fx:id="removeButton" text="Remove Document" prefWidth="300" prefHeight="90" style="-fx-font-size: 20;"/>
         <Button fx:id="updateButton" text="Update Document" prefWidth="300" prefHeight="90" style="-fx-font-size: 20;"/>
         <Button fx:id="findButton" text="Find Document" prefWidth="300" prefHeight="90" style="-fx-font-size: 20;"/>
         <Button fx:id="displayButton" text="Display Document" prefWidth="300" prefHeight="90" style="-fx-font-size: 20;"/>
      </VBox>
   </left>
   <center>
      <Label fx:id="displayLabel" text="Select an option from the left" wrapText="true" style="-fx-padding: 10;"/>
   </center>
</BorderPane>
