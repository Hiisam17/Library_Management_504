<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Button?>

<AnchorPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.menubar.EditDocumentController">
    <children>
        <Label text="Sửa Tài Liệu" layoutX="20" layoutY="10" />
        <TextField fx:id="idField" promptText="ID" layoutX="20" layoutY="40" editable="false" style="-fx-background-color: #f0f0f0;" />

        <TextField fx:id="titleField" promptText="Tiêu đề" layoutX="20" layoutY="80" />
        <TextField fx:id="authorField" promptText="Tác giả" layoutX="20" layoutY="120" />
        <TextField fx:id="publisherField" promptText="Nhà xuất bản" layoutX="20" layoutY="160" />
        <DatePicker fx:id="publishedDatePicker" layoutX="20" layoutY="200" />
        <Button text="Lưu Thay Đổi" onAction="#handleSaveChanges" layoutX="20" layoutY="240" />
    </children>
</AnchorPane>


