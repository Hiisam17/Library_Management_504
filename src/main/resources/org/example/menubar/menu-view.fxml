<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.cell.PropertyValueFactory?>
<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="org.example.menubar.MainMenuController" alignment="CENTER" spacing="10" stylesheets="@login.css">
    <padding><Insets top="20" right="20" bottom="20" left="20"/></padding>
    <Button text="Đăng Xuất" onAction="#handleLogout" styleClass="menu-button"/>
    <Label text="Chào mừng đến với Quản lý Thư viện" styleClass="header-label"/>

    <!-- Các nút chức năng -->
    <Button text="Thêm Tài Liệu" onAction="#handleAddDocument" styleClass="menu-button"/>
    <Button text="Xóa Tài Liệu" onAction="#handleDeleteDocument" styleClass="menu-button"/>
    <Button text="Sửa Tài Liệu" onAction="#handleEditDocument" styleClass="menu-button"/>
    <Button text="Tìm Kiếm Tài Liệu" onAction="#handleSearchDocument" styleClass="menu-button"/>
    <TextField fx:id="searchField" promptText="Nhập tiêu đề sách"/>
    <Button text="Tìm Kiếm" onAction="#handleSearch" styleClass="menu-button"/>

    <!-- Bảng hiển thị danh sách tài liệu -->
    <Label text="Danh sách Tài liệu"/>
    <TableView fx:id="documentTableView" prefHeight="300" prefWidth="400">
        <columns>
            <TableColumn text="ID" fx:id="idColumn" prefWidth="100">
                <cellValueFactory><PropertyValueFactory property="id"/></cellValueFactory>
            </TableColumn>
            <TableColumn text="Tiêu đề" fx:id="titleColumn" prefWidth="150">
                <cellValueFactory><PropertyValueFactory property="title"/></cellValueFactory>
            </TableColumn>
            <TableColumn text="Tác giả" fx:id="authorColumn" prefWidth="150">
                <cellValueFactory><PropertyValueFactory property="author"/></cellValueFactory>
            </TableColumn>
            <TableColumn text="Nhà xuất bản" fx:id="publisherColumn" prefWidth="100">
                <cellValueFactory><PropertyValueFactory property="publisher"/></cellValueFactory>
            </TableColumn>
            <TableColumn text="Ngày xuất bản" fx:id="publishedDateColumn" prefWidth="100">
                <cellValueFactory><PropertyValueFactory property="publishedDate"/></cellValueFactory>
            </TableColumn>
        </columns>
    </TableView>
</VBox>
